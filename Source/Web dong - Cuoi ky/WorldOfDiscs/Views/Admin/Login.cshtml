
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>World of discs - Login admin</title>
    <link rel="stylesheet" href="~/Content/AdminTemplate/Login/css/style.css">
</head>
<body>
    <div class="wrapper">
        
        <div class="container">
            <h1 style="font-size: 40px;" id="welcome" hidden>WELCOME TO</h1>
            <img src="~/img/logo.gif" />
            <h1 id="login">LOGIN - ADMIN</h1>
            <label style="font-size: 18px;">@ViewBag.ErrorLogin</label>
            
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form" }))
            {
                <input type="text" name="Email" placeholder="Username"required>
                <input type="password" name="Password" placeholder="Password"required>
                <button type="submit" id="login-button">Login</button>
            }
                
        </div>
        <ul class="bg-bubbles">
            <li>WOD</li>
            <li>FILM</li>
            <li>MUSIC</li>
            <li>GAME</li>
            <li>LINUX</li>
            <li>WIN</li>
            <li>MAC-OS</li>
            <li>DVD</li>
            <li>CD</li>
            <li>LCD</li>
        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>   
</body>
</html>

